{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/ui/*": ["components/ui/*"],
      "@/constants/*": ["constants/*"],
      "@/contexts/*": ["contexts/*"],
      "@/features/*": ["features/*"],
      "@/navigation/*": ["navigation/*"],
      "@/screens/*": ["screens/*"]
    },
    "moduleResolution": "node"
  }
}
